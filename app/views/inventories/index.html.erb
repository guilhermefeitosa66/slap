<p></p>

<div class="ui container">
  <div class="ui menu"">
    <a href="#" class="item active"><strong>Inventário</strong></a>
    <%= link_to "Novo", new_inventory_path, class: 'item' %>
  </div>

  <div class="ui four cards">
  <% @inventories.each do |inventory| %>
    <div class="card">
      <div class="content">
        <div class="header"><%= inventory.year %> - <%= inventory.campus %></div>
      </div>

      <div class="content">
        <div class="description">
          <p class="info"><%= link_to 'Baixar planilha enviada', inventory.file_url %></p>
          <p class="info"><%= inventory.remaining %></p>
          <p></p>

          <div class="ui teal progress" data-percent="<%= inventory.progress %>">
            <div class="bar"></div>
            <div class="label">
              <%= inventory.progress %>%
            </div>
          </div>
        </div>

      </div>

      <div class="ui bottom attached small icon buttons">
        <%= link_to export_path(inventory.id), class: 'ui button', target: '_blank', title: 'Exportar para XLS' do %>
          <i class="file excel outline icon"></i>
        <% end %>

        <%= link_to export_divergent_path(inventory.id), class: 'ui button', title: 'Relatório de transferência patrimonial' do %>
          <i class="file icon"></i>
        <% end %>

        <%= link_to inventory, class: 'ui button', title: 'Detalhes' do %>
          <i class="search icon"></i>
        <% end %>

        <%= link_to edit_inventory_path(inventory), class: 'ui button', title: 'Editar' do %>
          <i class="edit icon"></i>
        <% end %>

        <%= link_to inventory, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'ui button', title: 'Remover' do %>
          <i class="remove icon"></i>
        <% end %>
      </div>
    </div>
  <% end %>
  </div>




</div>

<script type="text/javascript">
  $('.progress').progress();
</script>