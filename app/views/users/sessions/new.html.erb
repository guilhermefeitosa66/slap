<div class="ui centered grid container" style="margin-top: 1em;">
  <div class="row">
    <div class="sixteen wide tablet six wide computer column">
      <h2 class="ui teal image header">
        <div class="content">
          Entrar no SLAP
        </div>
      </h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'ui large form'}) do |f| %>
        <div class="ui segment">
          <div class="field">
            <div class="ui left icon input">
              <i class="user icon"></i>
              <%= f.email_field :email, autofocus: true, placeholder: 'E-mail' %>
            </div>
          </div>

          <div class="field">
            <div class="ui left icon input">
              <i class="lock icon"></i>
              <%= f.password_field :password, autocomplete: "off", placeholder: 'Senha' %>
            </div>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <div class="ui toggle checkbox">
                <%= f.check_box :remember_me, class: 'hidden', tabindex: 0 %>
                <%= f.label :remember_me %>
              </div>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Entrar", class: 'ui fluid large teal submit button' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>  
</div>